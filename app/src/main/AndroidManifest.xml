<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.yunihuani.accountmanager" >

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme" >
        <activity android:name=".view.SplashActivity" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".view.MainActivity"
            android:theme="@style/Theme.AppCompat.Light" >
        </activity>
        <activity android:name=".view.FriendDetailActivity" >
        </activity>
        <activity android:name=".view.MessageActivity" >
        </activity>
        <activity android:name=".view.GroupDetailActivity" >
        </activity>
        <activity android:name=".view.FriendActivity" >
        </activity>
    </application>

</manifest>
