<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin">

    <LinearLayout
        android:id="@+id/main_group_layout_radio"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <RadioGroup
            android:id="@+id/main_group_radiogroup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <RadioButton
                android:id="@+id/main_group_radio_all"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="true"
                android:text="전체"/>
            <RadioButton
                android:id="@+id/main_group_radio_complete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="완료"/>
            <RadioButton
                android:id="@+id/main_group_radio_notyet"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="미납"/>
        </RadioGroup>

    </LinearLayout>
    
    <Button
        android:id="@+id/main_group_btn_add"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:text="Add"
        />
    <ListView
        android:id="@+id/main_group_listview"
        android:layout_below="@id/main_group_layout_radio"
        android:layout_above="@id/main_group_btn_add"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
    />
</RelativeLayout>
